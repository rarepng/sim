{
    "version": 4,
    "cmakeMinimumRequired": { "major": 4, "minor": 0 },
    "configurePresets": [
        {
            "name": "dbg",
            "description": "Debug build with EMCC, Ninja, C++23",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/dbg",
            "cacheVariables": {
              "CMAKE_BUILD_TYPE":      "Debug",
              "CMAKE_CXX_STANDARD":    "23",
              "CMAKE_C_STANDARD":    "23",
              "CMAKE_INSTALL_PREFIX":"${sourceDir}/dist"
            }
          },
          {
            "name": "rel",
            "description": "Release build with EMCC, Ninja, C++23",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/rel",
            "cacheVariables": {
              "CMAKE_BUILD_TYPE":      "Release",
              "CMAKE_CXX_STANDARD":    "23",
              "CMAKE_C_STANDARD":    "23",
              "CMAKE_INSTALL_PREFIX":"${sourceDir}/dist"
            }
          }
    ],
    "buildPresets": [
      { "name": "build_dbg",   "configurePreset": "dbg" },
      { "name": "build_rel", "configurePreset": "rel" }
    ]
  }
  